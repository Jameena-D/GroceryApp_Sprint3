<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.RegisterView"
             Title="Registreren">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry Placeholder="Naam" Text="{Binding Name}" />
        <Entry Placeholder="E-mailadres" Keyboard="Email" Text="{Binding Email}" />
        <Entry Placeholder="Wachtwoord" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Herhaal wachtwoord" IsPassword="True" Text="{Binding ConfirmPassword}" />

        <Button Text="Registreren"
                Clicked="OnBackToLoginClicked" />
    </VerticalStackLayout>
</ContentPage>